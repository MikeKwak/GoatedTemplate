{
  "name": "ai-saas-bootstrap",
  "version": "1.0.0",
  "private": true,
  "description": "AI SaaS Bootstrap Monorepo",
  "workspaces": [
    "web",
    "mobile",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "dev:web": "npm run dev --workspace=web",
    "dev:mobile": "npm run start --workspace=mobile",
    "build": "npm run build --workspaces",
    "build:web": "npm run build --workspace=web",
    "amplify:sandbox": "npx ampx sandbox",
    "amplify:deploy": "npx ampx pipeline-deploy --branch main",
    "deploy:frontend": "./scripts/deploy-frontend.sh amplify",
    "deploy:frontend:aws": "./scripts/deploy-frontend-aws-cli.sh",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@aws-amplify/backend": "^1.19.0",
    "@aws-amplify/backend-cli": "^1.8.1",
    "@types/node": "^20.10.0",
    "aws-cdk-lib": "^2.232.2",
    "constructs": "^10.4.4"
  }
}
